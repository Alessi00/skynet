{
  "apps": {
    "tls": {
      "certificates": {
        "automate": [
          {{#PORTAL_DOMAIN}}
              "{{PORTAL_DOMAIN}}", "*.{{PORTAL_DOMAIN}}", "*.hns.{{PORTAL_DOMAIN}}"
          {{/PORTAL_DOMAIN}}

          {{#PORTAL_DOMAIN}}{{#SERVER_DOMAIN}},{{/SERVER_DOMAIN}}{{/PORTAL_DOMAIN}}

          {{#SERVER_DOMAIN}}
              "{{SERVER_DOMAIN}}", "*.{{SERVER_DOMAIN}}", "*.hns.{{SERVER_DOMAIN}}"
          {{/SERVER_DOMAIN}}
        ]
      },
      "automation": {
        "policies": [
          {
            "issuers": [
              {
                "module": "acme",
                "email": "{{EMAIL_ADDRESS}}",
                "challenges": {
                  "dns": {
                    "provider": {
                      "name": "route53"
                    },
                    "ttl": "30m"
                  }
                }
              }
            ]
          }
        ]
      }
    }
  }
}
