{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,
    "lib": ["es2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./dist"],
  "compileOnSave": true
}
